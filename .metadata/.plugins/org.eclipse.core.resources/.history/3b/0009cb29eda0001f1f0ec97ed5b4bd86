package Ejercicio03;

public class Operaciones {

    private int numero;

	public Operaciones(int numero) {
    	this.numero=numero;
	}

	public  String posNeg(int numero) {
        if (numero >= 0) {
            return "Positivo";
        } else {
            return "Negativo";
        }
    }

    public  String ParImp(int numero) {
        if (numero % 2 == 0) {
            return "Par";
        } else {
            return "Impar";
        }
    }
}
